@import 'nib'
@import '../../../common/variables'
@import '../../../common/mixins'

body
	display flex
	@media screen and (max-width 800px)
		flex-direction column

.block-left
	border-edge(right)
	flex-grow 1
	@media screen and (max-width 800px)
		border 0

.block-right
	flex-grow 1
	


.edit-menu
	absolute top right
	opacity 0
	transition .3s

	> li
		display block
		cursor pointer
		font-scale 1
		padding 10px
		transition .2s
		float right
		position relative

		&::before
			width 20px
			height 20px
			display block
			text-align center
			font-family 'FontAwesome'
		&::after
			content ''
			absolute top 100%	left
			display block
			border-left 20px solid transparent
			border-right 20px solid transparent
			border-bottom 0 solid transparent
			border-top: 10px solid transparent
			transition .2s

	.remove
		action-button("\f00d", terrible-red)
	.approve
		action-button("\f164", pure-grass)
	.disapprove
		action-button("\f165", terrible-red)
	.edit
		action-button("\f040")
		

.articles-list
	> li
		border-edge(bottom)
		position relative
		padding 15px 20px

		&:hover .edit-menu
			opacity 1

		.title
			display inline-block
			margin-bottom 5px
			margin-right 120px
			color gray(20%)
			text-decoration none
			font-scale 1
			font-weight bold

			&:hover
				text-decoration underline

		.description
			font-scale 0
			margin 10px 0 15px
