@font-face {
  font-family: 'FontAwesome';
  src: url('../../../lib/components-font-awesome/fonts/fontawesome-webfont.eot?v=4.1.0');
  src: url('../../../lib/components-font-awesome/fonts/fontawesome-webfont.eot?#iefix&v=4.1.0') format('embedded-opentype'),
       url('../../../lib/components-font-awesome/fonts/fontawesome-webfont.woff?v=4.1.0') format('woff'),
       url('../../../lib/components-font-awesome/fonts/fontawesome-webfont.ttf?v=4.1.0') format('truetype'),
       url('../../../lib/components-font-awesome/fonts/fontawesome-webfont.svg?v=4.1.0#fontawesomeregular') format('svg');
  font-weight: normal;
  font-style: normal;
}

border(side='')
	if side is ''
		border 1px solid #ccc
	else if side is 0
		border 0
	else
		border-{side} 1px solid #ccc

body, input, textarea
		font-family Ubuntu, Segoe UI, sans-serif

.block-left
	border(right)
	overflow hidden

.button-close
	cursor pointer
	position absolute
	color hsl(0,50%,60%)
	font-size 20px
	top 10px
	right 10px
	transition opacity .3s
	opacity 0

	&::before
		font-family 'FontAwesome'
		content "\f057"

.news-list
	> li
		border(bottom)
		position relative
		padding 15px 20px

		&:hover .button-close
			opacity 1

		.title
			display inline-block
			margin-bottom 5px
			color hsl(0,0%,40%)
			text-decoration none
			font-size 20px
			font-weight bold

			&:hover
				text-decoration underline

		.description
			font-size .9em
			margin 10px 0

.tags
	clear both
	overflow hidden
	margin 15px -15px 0
	//background #eee
	//padding 10px 15px
	padding 0 10px

	li
		position relative
		padding 7px 10px
		border-radius 2px
		background hsl(200,50%,60%)
		float left
		margin 5px
		color white
		font-size 12px
		cursor pointer
		overflow hidden
		transition background .3s ease-in, color .3s ease-in

		&::after
			position absolute
			left 50%
			top 50%
			margin-left -30px
			margin-top -30px
			padding 22px 22px
			height 60px
			width 60px
			border-radius 36px
			box-sizing border-box
			background hsl(200,50%,50%)
			text-align center
			font-size 16px
			font-family 'FontAwesome'
			//visibility hidden
			content "\f00d"
			color #fff
			opacity 0
			transform scale(.5)
			transition opacity .3s ease-out, transform .3s ease-out

		&:hover
			background hsl(200,50%,50%)
			color hsla(0,0%,0%,0)

			&::after
				opacity 1
				transform scale(1)
				//visibility visible

		&:active
			&::after
				transform scale(.8)
		

.block-right
	box-sizing border-box
	float right
	width 400px

.form
	width 100%
	overflow hidden
	padding 0 20px
	box-sizing border-box
	background #eee
	border(bottom)

	label
		font-size 12px
		color #999
		margin 20px 0 10px
		display block

	input, textarea, button
		width 100%
		max-width 100%
		min-width 100%
		padding 8px 0
		font-size 16px
		display block
		box-sizing border-box

	input, textarea
		margin 0
		border 0
		border(bottom)
		color #333
		background transparent

		&:focus
			border-bottom 2px solid hsl(200,50%,60%)
			outline 0
			padding-bottom 7px
		

	button
		border()
		margin 15px 0 20px
		cursor pointer
		color white
		background hsl(150,40%,50%)
		border-color hsl(150,40%,45%)
		border-radius 2px
		transition background .3s
		
		&:focus
			outline none

		&:hover
			background hsl(150,40%,45%)

		&:active
			background hsl(150,40%,40%)
			
