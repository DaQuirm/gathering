.action-menu
	display flex
	justify-content center
	margin-bottom 15px
	padding-bottom 15px
	border-edge(bottom, , , dashed)

	> li
		font-family FontAwesome
		font-scale(1)
		border-radius 100%
		padding 10px
		width 40px
		height 40px
		box-sizing border-box
		text-align center
		cursor pointer
		transition color .2s, background .2s
		margin 0 10px

