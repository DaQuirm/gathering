.action-menu
	display flex
	justify-content center
	flex-wrap wrap
	margin -1*type-scale(1)
	margin-bottom type-scale(1)
	border-edge(bottom, , , dashed)

	> li
		position relative
		width type-scale(1)
		height type-scale(1)
		padding 10px
		border-radius 100%
		text-align center
		cursor pointer
		transition color .2s, background .2s
		margin type-scale(0)

		&::before
			font-family FontAwesome
			font-scale(1)
			width type-scale(1)
			height type-scale(1)
			position absolute
			margin auto
			display block

