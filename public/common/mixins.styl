gray(lightness)
	hsl(0, 0%, lightness)

border-edge(sides = all, color = gray(80%))
	if all in sides
		border 1px solid color
		return
	if left in sides
		border-left 1px solid color
	if right in sides
		border-right 1px solid color
	if top in sides
		border-top 1px solid color
	if bottom in sides
		border-bottom 1px solid color

action-button(content, color = gray(60%))
	color color
	&::before
		content content
	&:hover
		background alpha(color, .2)
		&::after
			border-top-color alpha(color, .2)
	&:active
		background alpha(color, .5)
		color white
		&::after
			border-top-color alpha(color, .5)

// Type scaling - http://modularscale.com/

type_scales = {
	m2: 1.067,
	M2: 1.125,
	m3: 1.200,
	M3: 1.250,
	P4: 1.333,
	TT: 1.414,
	P5: 1.500,
	golden: 1.618
}

font-scale(factor, size = 1, unit = rem, ratio = 'M3')
	font-size unit(size * type_scales[ratio] ** factor, unit)
